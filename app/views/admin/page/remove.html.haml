- pages = (@page.children.count + 1) > 2 ? 'Page'[:page] : 'Pages'[:pages]
%h1
  = "Remove {pages}"[:remove_page, { :pages => pages }]

%p
  = "Are you sure you want to <strong class='warning'>permanently</strong> remove the following {pages}?"[:are_you_sure_you_want_to_remove_pages, { :pages => pages }]

%table.index#site-map{:cellpadding=>0, :cellspacing=>0, :border=>0}
  %tbody
    = render_node @page, :simple => true

- form_tag do
  %p.buttons
    %input.button{:type=>"submit", :value => "Delete Pages"[:delete_pages]}/
    = "or"[:or]
    = link_to 'Cancel'[:cancel], page_index_url