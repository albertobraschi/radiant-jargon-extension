%h1 User Preferences

- form_tag do
  %table.fieldset{:cellpadding=>0, :cellspacing=>0, :border=>0}
    %tr
      %th.label
        %label{:for=>"user_password"}= "Password"[:password]
      %td.field
        = password_field "user", "password", :class => 'textbox', :value => '', :maxlength => 40
      %td.help{:rowspan=>2}
        = "At least 5 characters. Leave password blank for it to remain unchanged."[:change_password_info]
    %tr
      %th.label
        %label{:for=>"user_password_confirmation"}= "Confirm Password"[:confirm_password]
      %td.field
        = password_field "user", "password_confirmation", :class => 'textbox', :value => '', :maxlength => 40
    %tr
      %th.label
        %label{:for=>"user_email"}= "E-mail"[:email]
      %td.field
        = text_field "user", "email", :class => 'textbox', :maxlength => 255
      %td.help= "Optional."[:optional]
  %p.buttons
    = save_model_button @user
    = "or"[:or]
    = link_to 'Cancel'[:cancel], admin_url

= javascript_tag "$('user_password').activate();"